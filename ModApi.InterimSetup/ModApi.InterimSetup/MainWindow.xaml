<Window x:Class="ModApi.InterimSetup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModApi.InterimSetup"
        xmlns:ui="clr-namespace:ModApi.UI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ModAPI Launcher Kit Setup" Height="450" Width="800" ResizeMode="NoResize" Background="{DynamicResource WindowBackgroundBrush}" Closing="Window_Closing">
    <DockPanel>
        <StackPanel x:Name="FooterUniformGrid" Orientation="Vertical" DockPanel.Dock="Bottom">
            <StackPanel.LayoutTransform>
                <ScaleTransform x:Name="FooterScaleTransform" ScaleX="1" ScaleY="0" CenterY="1"/>
            </StackPanel.LayoutTransform>
            <CheckBox x:Name="ShortcutsCheckBox" IsThreeState="False" Checked="ShortcutsCheckBox_Checked" Unchecked="ShortcutsCheckBox_Unchecked" IsChecked="True">Create shortcuts on desktop</CheckBox>
            <UniformGrid Rows="1" Height="40">
                <Button x:Name="CancelButton" IsCancel="True" BorderThickness="0" Click="CancelButton_Click">Cancel</Button>
                <Button x:Name="BackButton" Click="BackButton_Click" BorderThickness="0" Margin="-1,0,0,0">Back</Button>
                <Button x:Name="NextButton" Click="NextButton_Click" BorderThickness="0" Margin="-1,0,0,0" IsEnabled="False">Install</Button>
            </UniformGrid>
        </StackPanel>
        <UniformGrid x:Name="SecondFooterUniformGrid" Rows="1" Height="40" DockPanel.Dock="Bottom">
            <UniformGrid.LayoutTransform>
                <ScaleTransform x:Name="SecondFooterScaleTransform" ScaleX="1" ScaleY="0" CenterY="1"/>
            </UniformGrid.LayoutTransform>
            <Button x:Name="CloseButton" BorderThickness="0" Click="CloseButton_Click">Exit</Button>
        </UniformGrid>
        <Grid x:Name="RootGrid" Margin="50">
            <UniformGrid Columns="1">
                <Button x:Name="UpgradeInstallButton" Content="I already have an existing copy of the Spore ModAPI Launcher." FontSize="18" Margin="50,25" Click="UpgradeInstallButton_Click"/>
                <Button x:Name="NewInstallButton" Content="I am installing the Spore ModAPI Launcher Kit for the first time." FontSize="18" Margin="50,25" Click="NewInstallButton_Click"/>
            </UniformGrid>
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <TextBlock x:Name="PageOneInstructionsTextBlock" DockPanel.Dock="Top" Margin="0,0,0,10"></TextBlock>
                <TextBlock x:Name="GoodOrBadPathTextBlock" Margin="0,10,0,0" Visibility="Hidden" DockPanel.Dock="Bottom"/>
                <Button x:Name="PathBrowseButton" DockPanel.Dock="Right" BorderThickness="0,3,3,0" Margin="-1,0,0,0" Height="40" Padding="10" Click="PathBrowseButton_Click">Browse...</Button>
                <TextBox x:Name="PathTextBox" BorderThickness="3,0,0,3" TextChanged="PathTextBox_TextChanged"/>
            </DockPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock FontSize="18">Installation in progress...</TextBlock>
                <ProgressBar x:Name="InstallProgressBar" Margin="5" Height="40" Value="0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock FontSize="18">Installation complete!</TextBlock>
                <TextBlock x:Name="CompletionInfoTextBlock" TextWrapping="Wrap"></TextBlock>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
