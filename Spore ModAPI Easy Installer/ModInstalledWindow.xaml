<Window x:Class="Spore_ModAPI_Easy_Installer.ModInstalledWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spore_ModAPI_Easy_Installer"
        xmlns:ui="clr-namespace:ModAPI.Common.UI;assembly=ModAPI.Common"
        xmlns:win="clr-namespace:ModAPI.Common.UI.Windows;assembly=ModAPI.Common"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight" MaxWidth="400" MaxHeight="500" ResizeMode="NoResize" Loaded="ModInstalledWindow_Loaded" Visibility="Visible" Closing="ModInstalledWindow_Closing">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/AlterMod.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <TextBlock x:Name="HeaderTextBlock" FontSize="16" TextWrapping="Wrap" DockPanel.Dock="Top">Your selected mods are done installing.</TextBlock>
        <Border Style="{DynamicResource HorizontalBarBorderStyle}" BorderThickness="0,1,0,0" CornerRadius="0,0,2,2" DockPanel.Dock="Bottom">
            <Button x:Name="AcknowledgeButton" Visibility="Visible" Margin="5" Click="AcknowledgeButton_Click">OK</Button>
        </Border>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Padding="8">
            <TextBlock x:Name="BodyTextBlock" TextWrapping="Wrap">sample text</TextBlock>
        </ScrollViewer>
    </DockPanel>
</Window>